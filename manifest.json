{
  "manifest_version": 2,
  "name": "Toolware - Chrome",
  "version": "v0.0.1",
  
  "default_locale": "en",
  "description": "Toolware tooling system, but as a Chrome Extension!",
  "icons": {
    "default_icon": "128.png",
    "16": "16.png",
    "32": "32.png",
    "64": "64.png",
    "128": "128.png",
  },

  "browser_action": {
    "default_popup": "popup.html",
  },

  "permissions": ["contextMenus", "storage"],
  
  "commands": {
      "dark-mode": {
        "suggested_key": {
          "default": "Ctrl+Alt+d",
          "mac": "Command+Alt+d"
        },
        "description": "Go into Dark Mode"
      },
      "light-mode": {
        "suggested_key": {
          "default": "Ctrl+Alt+l",
          "mac": "Command+Alt+l"
        },
        "description": "Go into Light Mode"
      }
    }
